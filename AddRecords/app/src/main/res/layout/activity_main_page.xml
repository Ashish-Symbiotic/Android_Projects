<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.addrecords.MainPage">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="AddDetail"
        android:id="@+id/AddPerson"
        android:text="Add Party Details"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Edit_Person"
        android:layout_below="@+id/AddPerson"
        android:gravity="center"
        android:onClick="EditDetail"
        android:layout_marginTop="20dp"
        android:text="Edit Party Details"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edit_Person"
        android:gravity="center"
        android:onClick="ShowDetail"
        android:layout_marginTop="20dp"
        android:text="Show Details"
        android:id="@+id/Show_Details"
        android:layout_alignRight="@+id/Add_Sales"
        android:layout_alignEnd="@+id/Add_Sales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Show_Details"
        android:layout_marginTop="20dp"
        android:onClick="AddSales"
        android:gravity="center"
        android:id="@+id/Add_Sales"
        android:text="Add Sales"
        android:layout_alignRight="@+id/Edit_Sales"
        android:layout_alignEnd="@+id/Edit_Sales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Edit_Sales"
        android:layout_below="@+id/Add_Sales"
        android:layout_marginTop="20dp"
        android:onClick="EditSales"
        android:gravity="center"
        android:text="Edit Sales"
        android:layout_alignRight="@+id/AddPerson"
        android:layout_alignEnd="@+id/AddPerson"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/View_Sales"
        android:onClick="ViewSales"
        android:layout_below="@+id/Edit_Sales"
        android:layout_marginTop="20dp"
        android:text="View Sales"
        android:layout_alignRight="@+id/Edit_Sales"
        android:layout_alignEnd="@+id/Edit_Sales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
